{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build venv",
            "type": "shell",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "command": "poetry"
        },
        {
            "label": "Build base image",
            "type": "shell",
            "args": [
                "build",
                "-t", "text-gen-base-mistral-cpu:latest",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/base_image"
            },
            "group": "build",
            "command": "docker",
            "problemMatcher": []
        },
        {
            "label": "Build image",
            "type": "shell",
            "args": [
                "build",
                "-t", "local-text-gen-cpu:latest",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "command": "docker",
            "problemMatcher": []
        },
        {
            "label": "Run image",
            "dependsOn": ["Build image"],
            "dependsOrder": "sequence",
            "type": "shell",
            "args": [
                "run",
                "-it", "--rm",
                "-p", "8000:8000",
                "local-text-gen-cpu:latest"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "command": "docker",
            "problemMatcher": []
        },
        {
            "label": "Run flask win dev",
            "type": "shell",
            "args": [
                "run",
                "--port", "8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "FLASK_APP": "routes:app",
                    "MODEL_PATH": "${workspaceFolder}/base_image/models/Mistral-7B-Instruct-v0.2/mistral-7b-instruct-v0.2.Q5_K_S.gguf",
                    "INDEX_HTML_PATH": "${workspaceFolder}/src/index.html",
                    "PRELOAD_MODELS": "true"
                }
            },
            "group": "build",
            "command": "${workspaceFolder}/.venv/Scripts/flask.exe",
            "problemMatcher": []
        }
    ]
}
